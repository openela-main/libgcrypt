+#define UDIV_QRNND_PREINV(q, r, nh, nl, d, di) \
+    do {							    \
+        mpi_limb_t _ql GCC_ATTR_UNUSED;                               \
+	mpi_limb_t _q, _r;                                          \
+	mpi_limb_t _xh, _xl;					    \
